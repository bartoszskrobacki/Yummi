---
import Image from 'astro/components/Image.astro'

export interface Props {
	data: {
		title: string
		subtitle: string
		additionalText: string
		born:string
		image: ImageMetadata
	}
}

const { title, subtitle, additionalText, image, born } = Astro.props.data
---

<div class="group h-96 w-72  [perspective:1000px]">
<div class="relative h-full w-full rounded-lg shadow-lg duration-500 [transform-style:preserve-3d] group-hover:[transform:rotateY(180deg)]">
    <div class="absolute inset-0 ">
        <Image class="rounded-lg object-cover shadow-lg shadow-black/40" src={image} alt="" height={384} />
    </div>
    <div class="absolute inset-0 h-full w-full rounded-xl bg-black/40 px-20 text-center py-20 text-slate-200 [transform:rotateY(180deg)] [backface-visibility:hidden]">
        <h2 class="mb-0 duration-500 ease-in-out group-hover:text-primary">{title}</h2>
		<span class="text-lg duration-200 ease-in-out group-hover:text-primary">{subtitle}</span>
		<span class="du text-lg text-secondary duration-500 ease-in-out group-hover:text-secondary"
			>{additionalText}</span
		>
		<span>{born}</span>
    </div>
</div>
</div>
